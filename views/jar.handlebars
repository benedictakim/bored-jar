<div class="container">
    <div class="row d-flex align-content-center">
        <div class="centered col">

            <h1>Bored Jar</h1>

            <div class="jarContainer">
                <div class="jar">
                    <img id="jar-outline" src="img/jar-outline.svg">
                    <img id="jar-outline25" src="img/jar-outline25.svg">
                    <img id="lid-highlight" src="img/lid-highlight.svg">
                    <img id="lid" src="img/lid.svg">
                    <img id="jar-highlight" src="img/jar-highlight.svg">
                    <img id="paper" src="img/paper-0.svg">
                    <img id="whole-shadow" src="img/whole-shadow.svg">
                </div>
                <div class="random-container"><div id="random-thing"></div></div>
            </div>
            <form id="random-picker">
                <div class="container text-center">
                    <div class="random-buttons row">
                        <div class="duration col">
                            <select class="random-time form-control" name="Duration">
                                <option selected disabled>Duration</option>
                                <option>15</option>
                                <option>30</option>
                                <option>60</option>
                            </select>
                        </div>
                        <div class="button col">
                            <button type="submit" href="" class="btn btn-primary">What should I do?</button>
                        </div>
                    </div>
                    <a id="open-link" href="#">Create New Task</a>
                </div>
            </form>

        </div>
    </div>
</div>

<navigation class="container-fluid">
    <div class="row">
        <div class="col col-6">
            <a href="/logout">Logout</a>
        </div>
        <div class="col col-6">
            <button id="toggle" class="closed"></button>
        </div>
    </div>
</navigation>

<div id="drawer" class="col closed">
    <h2>What's in the Jar?</h2>
    <ul class="activity-list">
        <li class="new-item">
            <form id="activity-form">
                  <div class="container">
                    <div class="row">
                          <div class="col col-12">
                            <input class="new-activity form-control" placeholder="Activity" name="ActivityName" />
                          </div>
                        <div class="col col-10">
                            <select class="new-time form-control" placeholder="Time" name="Duration">
                                <option selected disabled>Time to Complete</option>
                                <option>15</option>
                                <option>30</option>
                                <option>60</option>
                            </select>
                        </div>
                        <div class="col col-2">
                            <button type="submit" class="btn btn-success">+</button>
                        </div>
                    </div>
                 </div>
            </form>
        </li>
        <span class="activity-container"></span>
    </ul>		
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="js/view.js" type="text/javascript"></script>